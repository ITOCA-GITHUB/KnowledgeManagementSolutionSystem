@model Google_cloud_storage_solution.Models.Login

@{
    ViewData["Title"] = "Login";
}

<style>
    .container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 75vh; /* Full viewport height */
    }

    .wrapper {
        width: 500px;
        background: #f0ad4e;
        border: 5px solid black;
        backdrop-filter: blur(4px);
        color: #fff;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

        .wrapper h1 {
            font-size: 40px;
            text-align: center;
            margin-bottom: 30px;
        }

        .wrapper .input-box {
            position: relative;
            width: 100%;
            height: 60px;
            margin: 20px 0;
        }

    .input-box input {
        width: 100%;
        height: 100%;
        background: transparent;
        border: none;
        outline: none;
        border: 2px solid white;
        border-radius: 12px;
        font-size: 18px;
        color: #fff;
        padding: 15px 20px;
    }

        .input-box input::placeholder {
            color: #111;
        }

    .input-box i {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        font-size: 22px;
    }

    .wrapper .checkbox1 {
        display: flex;
        justify-content: space-between;
        font-size: 16px;
        margin: 10px 0;
    }

    .checkbox1 label input {
        accent-color: #fff;
        margin-right: 5px;
    }

    .checkbox1 a {
        color: #fff;
        text-decoration: none;
    }

        .checkbox1 a:hover {
            text-decoration: underline;
        }

    .wrapper .btn {
        width: 100%;
        height: 50px;
        background: #fff;
        border: none;
        outline: none;
        border-radius: 12px;
        border: 1px solid white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        cursor: pointer;
        font-size: 18px;
        color: #333;
        font-weight: 600;
    }

    .wrapper .link {
        font-size: 16px;
        text-align: center;
        margin: 20px 0;
        color: black;
    }

    .alert-danger {
        border-radius: 12px;
        padding: 20px;
        font-size: 18px;
    }
</style>

<div class="container2">
    <div class="wrapper" id="loginFormContent">
        <form asp-action="Login" method="post">
            <h1>Login</h1>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger" role="alert">
                    Validation error occurred. Please correct the following issues:
                    <ul>
                        @foreach (var modelState in ViewData.ModelState.Values)
                        {
                            foreach (var error in modelState.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="input-box">
                <input asp-for="Username" type="text" placeholder="Username">
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="Password">
            </div>
            <div class="checkbox1">
                <label><input type="checkbox">Remember Me</label>
                <label><a asp-action="ForgotPassword" asp-controller="Account">Forgot Password</a></label>
            </div>
            <button type="submit" class="btn">Login</button>
            <div class="link">
                <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
