@{
    ViewData["Title"] = "Access Denied";
}

<style>
    .container2 {
        justify-content: center;
        display: flex;
        height: 600px;
        align-items: center;
    }

    .wrapper {
        width: 420px;
        background: black;
        border: 5px solid dodgerblue;
        backdrop-filter: blur(4px);
        color: #fff;
        border-radius: 12px;
        padding: 30px 40px;
    }

        .wrapper h1 {
            font-size: 36px;
            text-align: center;
        }

        .wrapper .message {
            text-align: center;
            font-size: 18px;
            margin: 30px 0;
        }

        .wrapper .btn {
            width: 100%;
            height: 45px;
            background: #fff;
            border: none;
            outline: none;
            border-radius: 10px;
            border: 1px solid white;
            box-shadow: 0 0 10px rgba(0, 0, 0, .1);
            cursor: pointer;
            font-size: 16px;
            color: #333;
            font-weight: 600;
            text-align: center;
        }
</style>

<div class="container2">
    <div class="wrapper">
        <h1>Access Denied</h1>
        <div class="message">
            You do not have permission to view this page.
        </div>
        <a href="/" class="btn">Return to Home</a>
    </div>
</div>
