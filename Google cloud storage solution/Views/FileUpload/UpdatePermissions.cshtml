@{
    ViewData["Title"] = "Update File Permissions";
}

<h2>Update File Permissions</h2>

<form asp-action="UpdatePermissions" method="post">
    <div class="form-group">
        <label for="objectName">File Name</label>
        <input type="text" class="form-control" id="objectName" name="objectName" required />
    </div>
    <button type="submit" class="btn btn-primary">Update Permissions</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}
