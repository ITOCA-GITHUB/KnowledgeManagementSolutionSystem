@{
    ViewData["Title"] = "Upload to Google Drive";
}

<h2>Upload File to Google Drive</h2>

<form asp-action="UploadToGoogleDrive" asp-controller="FileUpload" method="post" enctype="multipart/form-data">
    <input type="file" name="file" accept=".doc, .docx, .pdf, .xlsx, .pptx, .txt" />
    <button type="submit">Upload</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (ViewBag.GoogleDriveLink != null)
{
    <p>Google Drive Link: <a href="@ViewBag.GoogleDriveLink" target="_blank">@ViewBag.GoogleDriveLink</a></p>
}
