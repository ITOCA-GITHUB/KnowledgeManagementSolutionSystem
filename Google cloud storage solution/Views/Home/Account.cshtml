@model Google_cloud_storage_solution.Models.Users

@{
    ViewData["Title"] = "Account";
}

<style>
    body {
        background-color: #f9f9fa; /* Light gray background for a clean look */
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 2rem;
    }

    .user-card-full {
        overflow: hidden;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff; /* White background for the card */
    }

    .bg-c-lite-green {
        background: linear-gradient(to right, #ee5a6f, #f29263);
        padding: 2rem;
        border-radius: 10px 0 0 10px;
        color: #fff;
        text-align: center;
    }

    .newuser-profile img {
        border-radius: 50%;
        width: 150px;
        height: 150px;
    }

    .newuser-profile h6 {
        font-size: 16px;
        margin: 1rem 0;
    }

    .newuser-profile p {
        font-size: 20px;
        margin-bottom: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        padding: 0.5rem 1rem;
        color: #fff;
        font-size: 16px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .card-block {
        padding: 2rem;
    }

        .card-block h6 {
            font-size: 16px;
            border-bottom: 2px solid #e0e0e0;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

    .text-muted {
        color: #6c757d;
    }

    .f-w-600 {
        font-weight: 600;
    }

    .f-w-400 {
        font-weight: 400;
    }

    .row > .col-sm-6 {
        margin-bottom: 1rem;
    }
</style>

<div class="container">
    <div class="user-card-full">
        <div class="row no-gutters">
            <div class="col-sm-4 bg-c-lite-green newuser-profile">
                <div class="text-center">
                    <img src="https://img.icons8.com/bubbles/100/000000/user.png" alt="User-Profile-Image">
                    <h6 class="mt-3">@Model.Fullname</h6>
                    <p>@Model.Role</p>
                    <a asp-action="Edit" asp-controller="Users" asp-route-id="@Model.UserId" class="btn btn-primary">Edit</a>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="card-block">
                    <h6>Details</h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="f-w-600">Email</p>
                            <h6 class="text-muted f-w-400">@Model.Email</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="f-w-600">Phone</p>
                            <h6 class="text-muted f-w-400">@Model.PhoneNumber</h6>
                        </div>
                    </div>
                    <h6 class="mt-4">Location</h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="f-w-600">Address</p>
                            <h6 class="text-muted f-w-400">@Model.PhysicalAddress</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
