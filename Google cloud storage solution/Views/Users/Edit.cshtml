@model Google_cloud_storage_solution.Models.Users

@{
    ViewData["Title"] = "Edit User";
}

<style>
    h1 {
        text-align: center;
        margin: 0 auto;
        padding: 20px;
        color: #fff;
    }

    h4 {
        text-align: center;
        margin: 0 auto;
        padding: 20px;
        color: #fff;
    }

    mt-3{
        text-align: center;
        margin: 0 auto;
        padding: 20px;
    }
</style>

<h1>Edit User</h1>

<h4>Users</h4>
<hr />
<div class="form-container">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-group mb-3">
                <label asp-for="UserName" class="control-label font-weight-bold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label font-weight-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PasswordHash" class="control-label font-weight-bold"></label>
                <input asp-for="PasswordHash" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Fullname" class="control-label font-weight-bold"></label>
                <input asp-for="Fullname" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label font-weight-bold"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhysicalAddress" class="control-label font-weight-bold"></label>
                <input asp-for="PhysicalAddress" class="form-control" placeholder="Enter physical address" />
                <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label font-weight-bold"></label>
                @if (User.IsInRole("Admin"))
                {
                    <input asp-for="Role" class="form-control" placeholder="Enter role" />
                }
                else
                {
                    <input asp-for="Role" class="form-control" disabled />
                    <span class="text-muted">Role cannot be changed by non-admin users.</span>
                }
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="control-label font-weight-bold"></label>
                @if (User.IsInRole("Admin"))
                {
                    <input asp-for="Department" class="form-control" placeholder="Enter Department" />
                }
                else
                {
                    <input asp-for="Department" class="form-control" disabled />
                    <span class="text-muted">Department cannot be changed by non-admin users.</span>
                }
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
