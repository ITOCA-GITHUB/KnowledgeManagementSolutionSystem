@model Google_cloud_storage_solution.Models.Users

@{
    ViewData["Title"] = "User Details";
}

<style>
    .card-body {
        background-color: black; /* User details background color */
        color: #f0ad4e; /* Text color */
    }

    .card-footer .btn-warning {
        background-color: #f0ad4e; /* Edit button color */
        border-color: #f0ad4e;
        color: black;
    }

    .card-footer .btn-secondary {
        background-color: black; /* Back to List button background color */
        border-color: #f0ad4e;
        color: #f0ad4e;
    }
</style>

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-white bg-gradient">
            <h2 class="mb-0">User Details</h2>
        </div>
        <div class="card-body">
            <h4 class="card-title">User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Fullname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Fullname)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.PhysicalAddress)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.PhysicalAddress)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Role)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Department)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
