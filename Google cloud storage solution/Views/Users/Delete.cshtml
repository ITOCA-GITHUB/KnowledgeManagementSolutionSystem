@model Google_cloud_storage_solution.Models.Users

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f8f9fa; /* Light background for better contrast */
        color: #333; /* Darker text for readability */
    }

    h1 {
        color: #f0ad4e; /* Title color */
        border-radius: 5px;
        margin-bottom: 20px;
    }

    h3 {
        color: #f0ad4e; /* Heading color */
        font-weight: bold;
        margin-bottom: 15px;
    }

    h4 {
        color: #f0ad4e; /* Subheading color */
        font-weight: bold;
        margin-bottom: 15px;
    }

    .card {
        background-color: black;
        border: 1px solid #f0ad4e;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
    }

    .col-sm-2,
    .col-sm-10 {
        background-color: transparent;
        color: #f0ad4e;
        font-size: 18px;
        font-weight: bold;
    }

    .col-sm-2 {
        width: 20%;
        font-weight: bold;
    }

    .col-sm-10 {
        width: 80%;
    }

    dt {
        margin-bottom: 5px;
    }

    dd {
        margin-bottom: 15px;
    }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
        color: white;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #c9302c;
            border-color: #ac2925;
        }

    a {
        color: #f0ad4e;
        font-weight: bold;
        text-decoration: none;
    }

        a:hover {
            color: #d9534f;
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="card">
        <h1>@ViewData["Title"]</h1>

        <h3>Are you sure you want to delete this user?</h3>
        <div>
            <h4>User Information</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UserName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PasswordHash)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PasswordHash)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fullname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fullname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PhysicalAddress)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PhysicalAddress)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Role)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Role)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Department)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Department)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="UserId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
