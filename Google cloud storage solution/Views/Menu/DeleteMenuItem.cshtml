@model Google_cloud_storage_solution.Models.MenuItem

@{
    ViewData["Title"] = "Delete Menu Item";
}

<style>
    .form-group label {
        color: white; /* Change labels to white */
        font-size: 20px;
    }

    h1, h2 {
        color: #f0ad4e;
    }

    .form-group input[type="submit"] {
        background-color: black; /* Primary button color */
        color: #f0ad4e;
        border: none;
        cursor: pointer;
        font-size: 18px;
        padding: 10px;
        border-radius: 4px;
        width: 150px;
    }

    .footer {
        margin-top: 350px;
    }
</style>

<h1>Delete Menu Item</h1>

<div>
    <h4>Are you sure you want to delete this menu item?</h4>
    <div>
        <h2>@Model.Title</h2>
        <form asp-action="DeleteMenuItemConfirmed">
            <input type="hidden" asp-for="MenuItemId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
